{
  "manifest_version": 3,
  "name": "Debrief",
  "version": "1.0",
  "description": "Translate and analyze German sentences - select text to analyze",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Debrief - Select text to analyze"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ]
}

